        "properties": {
            "title": "Name",
            "categories": "Categories",
            "tags": "Tags",
            "status": "Status",
            "description": "Description",
            "author": "Author",
            "metaTitle": "MetaTitle",
            "slug": "Slug",
            "toc": "Toc",
            "comments": "Comments",
            "weight": "Weight"
